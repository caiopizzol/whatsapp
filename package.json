{
    "name": "@tictic/whatsapp",
    "version": "1.0.0",
    "description": "Simplified WhatsApp service - just connections and messages",
    "type": "module",
    "main": "src/server.js",
    "scripts": {
        "dev": "node --watch src/server.js",
        "start": "node src/server.js",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write \"src/**/*.js\"",
        "format:check": "prettier --check \"src/**/*.js\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "whatsapp-web.js": "^1.23.0"
    },
    "devDependencies": {
        "eslint": "^8.54.0",
        "prettier": "^3.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}