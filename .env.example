# WhatsApp Service Environment Variables
# Copy this file to .env and update with your actual values

# Required: Secret key for internal service authentication
# This should be a strong, random string that matches your gateway configuration
INTERNAL_SECRET=your-super-secret-key-here

# Optional: Port for the service to listen on
# Default: 3000
PORT=3000

# Optional: Node environment
# Values: development, production
# Default: production
NODE_ENV=development

# Optional: Enable debug logging for WhatsApp client
# Values: true, false
# Default: false
DEBUG_WHATSAPP=false
