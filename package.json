{
    "name": "@tictic/whatsapp",
    "version": "1.0.0",
    "description": "Simple HTTP service for WhatsApp. Built on whatsapp-web.js.",
    "keywords": [
        "whatsapp",
        "whatsapp-web.js",
        "http",
        "api",
        "messaging",
        "text"
    ],
    "type": "module",
    "main": "src/server.js",
    "scripts": {
        "dev": "node --watch src/server.js",
        "start": "node src/server.js",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write \"src/**/*.js\"",
        "format:check": "prettier --check \"src/**/*.js\"",
        "prepare": "husky install"
    },
    "dependencies": {
        "whatsapp-web.js": "^1.23.0"
    },
    "devDependencies": {
        "eslint": "^8.54.0",
        "prettier": "^3.1.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.1.0"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tictic-dev/whatsapp.git"
    },
    "bugs": {
        "url": "https://github.com/tictic-dev/whatsapp/issues"
    },
    "homepage": "https://github.com/tictic-dev/whatsapp#readme",
    "engines": {
        "node": ">=18.0.0"
    }
}